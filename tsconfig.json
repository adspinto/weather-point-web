{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "skipLibCheck": true,
      "jsx": "react",
      "lib": ["es6", "es2019"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": "./",
      "paths": {
        "*": ["src/*"],
        "@components/*": ["src/components/*"],
        "@config/*": ["src/config/*"],
        "@utils/*": ["src/utils/*"],
        "@pages/*": ["src/pages/*"],
        "@routes/*": ["src/routes/*"],
  
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "jest.config.js"
    ]
  }